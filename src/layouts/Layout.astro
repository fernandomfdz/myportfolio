---
import HeaderMenu from "../components/layout/HeaderMenu.astro";
import Footer from "../components/layout/Footer.astro";

interface Props {
  title: string;
  subtitle?: string;
  mainParagraph?: string;
  quote?: string;
}

const { title, subtitle, mainParagraph, quote } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Product Engineer con 8 aÃ±os de experiencia desarrollando productos digitales"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-orange-50 dark:bg-black w-full h-full min-w-fit">
    <HeaderMenu />
    <main class="relative w-full h-full p-2 md:p-0">
      <div
        class="pt-[10rem] md:pt-[12rem] pb-[3rem] flex flex-col gap-4 md:gap-8 relative items-center"
      >
        <h1
          class="text-center font-extrabold flex flex-col gap-2 text-gray-900 dark:text-gray-200"
        >
          <span class="text-7xl md:text-9x text-center">{title}</span>
          <span class="text-6xl md:text-5xl text-center">{subtitle}</span>
        </h1>
        <div
          class="max-w-4xl grid grid-cols-[1fr-min(65ch,100%-1fr)] relative text-gray-800 dark:text-gray-200"
        >
          <h2 class="text-center text-2xl text-gray-400">{mainParagraph}</h2>
        </div>
        <canvas class="fixed top-0 w-full h-full opacity -z-10" id="field">
        </canvas>
        <div
          class="absolute w-full -top-10 rounded-b-full *:rounded-b-full h-full blur-3xl mix-blend -z-10 bg-gray-600 opacity-50 content--canvas"
        >
        </div>
      </div>
      <article
        class="m-auto p-2 md:max-w-4xl md:mt-[4rem] flex flex-col gap-14"
      >
        <slot />
      </article>

      <section
        class="w-full h-full md:p-10 flex items-center justify-center mt-32"
      >
        <div
          class="flex items-center justify-center max-w-xl text-gray-800 dark:text-gray-200"
        >
          <p class="text-center text-gray-400">"{quote}"</p>
        </div>
      </section>
    </main>
    <Footer />
  </body>
  <script is:inline src="/js/sky.js"></script>
  <script is:inline src="/js/noise.min.js"></script>
  <script is:inline src="/js/bgutils.js"></script>
  <script is:inline src="/js/bgshift.js"></script>
</html>
